<Window x:Class="HierarchicalDataTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HierarchicalDataTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="825">

    <StackPanel Orientation="Vertical">
        <Expander Name="Expander_PLs" IsExpanded="True" >
            <DataGrid Name="PL" Loaded="DataGridLoaded_PLs"/>
        </Expander>
        <Expander Name="Expander_PLr">
            <DataGrid Name="PLr"  Loaded="DataGridLoaded_PLr"/>
        </Expander>
        <Expander Name="Expander_PLf" IsExpanded="True" >
            <DataGrid Name="PLf"   Loaded="DataGridLoaded_PLf"/>
        </Expander>
        <Expander Name="Expander_BL1s" Visibility="Collapsed">
            <DataGrid Name="BL1"  Loaded="DataGridLoaded_BL1s"/>
        </Expander>
        <Expander Name="Expander_BL2s">
            <DataGrid Name="BL2"  Loaded="DataGridLoaded_BL2s"/>
        </Expander>
    </StackPanel>

</Window>
