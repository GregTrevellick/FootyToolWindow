        xmlns:local="clr-namespace:HierarchicalDataTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="825">


    <StackPanel Orientation="Vertical">
        <Expander IsExpanded="True" Header="PLs">
            <DataGrid Name="PL" Loaded="DataGridLoaded_PLs"/>
        </Expander>
        <Expander  Header="PLr">
            <DataGrid Name="PLr"  Loaded="DataGridLoaded_PLr"/>
        </Expander>
        <Expander  Header="PLf" IsExpanded="True">
            <DataGrid Name="PLf"   Loaded="DataGridLoaded_PLf"/>
        </Expander>
        <Expander Header="BL1s" Visibility="Collapsed">
            <DataGrid Name="BL1"  Loaded="DataGridLoaded_BL1s"/>
        </Expander>
        <Expander Header="BL2s">
            <DataGrid Name="BL2"  Loaded="DataGridLoaded_BL2s"/>
        </Expander>
    </StackPanel>



