<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="825">

    <Window.Resources>
        <ResourceDictionary Source="Assets/PlusMinusExpanderStyles.xaml" />
    </Window.Resources>
   
    <StackPanel>
        <Expander Header="Description0" Style="{StaticResource PlusMinusExpander}" IsExpanded="True" >
            <local:MyDataGrid Loaded="DataGridLoaded_BL1" AlternatingRowBackground="Coral"/>
        </Expander>

    </StackPanel>
</Window>
